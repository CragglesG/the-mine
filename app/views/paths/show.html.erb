<% cache @path do %>
    <h1><%= @path.name %></h1>
    <%= @path.description %>
<% end %>

<%= link_to "Back", paths_path %>
<% if authenticated? %>
  <%= link_to "Edit", edit_path_path(@path) %>
  <%= button_to "Delete", @path, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>
